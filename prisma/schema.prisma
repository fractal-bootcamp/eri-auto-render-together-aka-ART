// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

// User model that connects with Clerk
model User {
    id              String             @id
    email           String?            @unique
    name            String?
    profileImageUrl String?
    createdAt       DateTime           @default(now())
    updatedAt       DateTime           @updatedAt
    configurations  ArtConfiguration[]
    likes           Like[]
}

// Art configuration model for storing user creations
model ArtConfiguration {
    id        String   @id @default(cuid())
    name      String
    code      String // Using regular String for SQLite
    thumbnail String?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    userId    String
    user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    likes     Like[]
    isPublic  Boolean  @default(false)

    // Metadata for searching and filtering
    tags          String? // Store as JSON string for SQLite
    baseFrequency Float?
    harmonicRatio Float?
    mode          String?
    colorScheme   String?

    @@index([userId])
    @@index([isPublic])
    @@index([createdAt])
}

// Like model for tracking user likes
model Like {
    id        String           @id @default(cuid())
    userId    String
    configId  String
    createdAt DateTime         @default(now())
    user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
    config    ArtConfiguration @relation(fields: [configId], references: [id], onDelete: Cascade)

    @@unique([userId, configId])
    @@index([userId])
    @@index([configId])
}
